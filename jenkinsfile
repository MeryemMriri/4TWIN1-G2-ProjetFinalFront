pipeline {
    agent any

    stages {
        
        stage('install dependencies') {
            steps {
                sh 'npm install'
             
            }
        }
        stage('SonarQube Analysis') {
            steps{
                script { 
                    def scannerHome = tool 'scanner'
                    withSonarQubeEnv {
                    sh "${scannerHome}/bin/sonar-scanner"
                    }
                } 
            } 
        }   
               
       
      
    }
}


